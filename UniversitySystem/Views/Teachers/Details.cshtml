@model UniversitySystem.Models.Teacher

@{
    ViewData["Title"] = "Подробности о преподавателе";
}

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">Подробная информация о преподавателе</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5>Основная информация</h5>
                            <dl class="row">
                                <dt class="col-sm-4">Фамилия:</dt>
                                <dd class="col-sm-8">@Model.SecondName</dd>

                                <dt class="col-sm-4">Имя:</dt>
                                <dd class="col-sm-8">@Model.Name</dd>

                                <dt class="col-sm-4">Отчество:</dt>
                                <dd class="col-sm-8">@Model.Patronymic</dd>

                                <dt class="col-sm-4">Кафедра:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-success">
                                        @if (Model.Departament?.Name != null)
                                        {
                                            @Model.Departament.Name
                                        }
                                        else
                                        {
                                            @:Не указана
                                        }
                                    </span>
                                </dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <h5>Контактная информация</h5>
                            <dl class="row">
                                <dt class="col-sm-4">Телефон:</dt>
                                <dd class="col-sm-8">@Model.PhoneNumber</dd>

                                <dt class="col-sm-4">Логин:</dt>
                                <dd class="col-sm-8"><code>@Model.Login</code></dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Быстрые действия</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            Назад к списку
                        </a>
                        <a href="@Url.Action("Search")" class="btn btn-outline-primary">
                            Новый поиск
                        </a>
                    </div>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">Статистика</h5>
                </div>
                <div class="card-body">
                    <p><strong>ID преподавателя:</strong> @Model.IdTeacher</p>
                    <p><strong>ID кафедры:</strong> @(Model.IdDepartament?.ToString() ?? "Не указан")</p>
                </div>
            </div>
        </div>
    </div>
</div>