@model IEnumerable<UniversitySystem.Models.Promotion>

@{
    ViewData["Title"] = "Акции и скидки";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card bg-warning text-dark mb-4">
                <div class="card-body text-center">
                    <h1 class="display-5">Акции и скидки</h1>
                    <p class="lead">Специальные предложения для наших студентов и преподавателей</p>
                </div>
            </div>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var promotion in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card h-100 shadow-sm border-warning">
                        <div class="card-header bg-warning text-dark">
                            <h5 class="mb-0">
                                @promotion.Title
                                @if (!string.IsNullOrEmpty(promotion.Discount))
                                {
                                    <span class="badge bg-danger float-end">@promotion.Discount</span>
                                }
                            </h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text">@promotion.Description</p>
                            <div class="mb-3">
                                <strong>Срок действия:</strong><br>
                                с @promotion.StartDate.ToString("dd.MM.yyyy") по @promotion.EndDate.ToString("dd.MM.yyyy")
                            </div>
                            @if (promotion.EndDate < DateTime.Now)
                            {
                                <div class="alert alert-danger">
                                    <strong>Акция завершена</strong>
                                </div>
                            }
                            else if (promotion.StartDate > DateTime.Now)
                            {
                                <div class="alert alert-info">
                                    <strong>Скоро начнется</strong>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-success">
                                    <strong>Акция активна</strong>
                                </div>
                            }
                        </div>
                        <div class="card-footer">
                            <a href="@Url.Action("PromotionDetails", new { id = promotion.IdPromotion })"
                               class="btn btn-outline-warning btn-sm">
                                Подробнее
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <h4>Акции отсутствуют</h4>
            <p>В данный момент нет активных акций. Следите за обновлениями!</p>
        </div>
    }

    <div class="text-center mt-4">
        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">
            На главную
        </a>
    </div>
</div>