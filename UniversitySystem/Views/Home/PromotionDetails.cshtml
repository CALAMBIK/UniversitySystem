@model UniversitySystem.Models.Promotion

@{
    ViewData["Title"] = Model.Title;
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-warning">
                <div class="card-header bg-warning text-dark">
                    <h1 class="h3 mb-0">
                        @Model.Title
                        @if (!string.IsNullOrEmpty(Model.Discount))
                        {
                            <span class="badge bg-danger fs-6">@Model.Discount</span>
                        }
                    </h1>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" class="img-fluid rounded mb-4" alt="@Model.Title">
                    }

                    <div class="promotion-content mb-4">
                        @Html.Raw(Model.Description.Replace("\n", "<br>"))
                    </div>

                    <div class="alert alert-info">
                        <h5>Срок действия акции:</h5>
                        <p class="mb-1"><strong>Начало:</strong> @Model.StartDate.ToString("dd.MM.yyyy")</p>
                        <p class="mb-0"><strong>Окончание:</strong> @Model.EndDate.ToString("dd.MM.yyyy")</p>
                    </div>

                    @if (Model.EndDate < DateTime.Now)
                    {
                        <div class="alert alert-danger">
                            <h5>Акция завершена</h5>
                            <p class="mb-0">Срок действия данной акции истек.</p>
                        </div>
                    }
                    else if (Model.StartDate > DateTime.Now)
                    {
                        <div class="alert alert-warning">
                            <h5>Скоро начнется</h5>
                            <p class="mb-0">Акция начнется @Model.StartDate.ToString("dd.MM.yyyy")</p>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-success">
                            <h5>Акция активна</h5>
                            <p class="mb-0">Успейте воспользоваться предложением!</p>
                        </div>
                    }
                </div>
            </div>

            <div class="mt-4">
                <a href="@Url.Action("Promotions")" class="btn btn-outline-warning">
                    Все акции
                </a>
                <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">
                    На главную
                </a>
            </div>
        </div>
    </div>
</div>