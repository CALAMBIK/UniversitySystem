@{
    ViewData["Title"] = "Главная страница";
    var latestNews = ViewBag.LatestNews as IEnumerable<UniversitySystem.Models.News>;
}

<div class="container">
    <div class="text-center mb-5">
        <h1 class="display-4">Добро пожаловать в Учебную Систему ВУЗа!</h1>
        <p class="lead">Современная система управления учебным процессом</p>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="row justify-content-center mb-3">
            <div class="col-lg-10">
                <div class="alert alert-success">
                    <strong>Успех!</strong> @TempData["Message"]
                </div>
            </div>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="row justify-content-center mb-3">
            <div class="col-lg-10">
                <div class="alert alert-danger">
                    <strong>Ошибка!</strong> @TempData["Error"]
                </div>
            </div>
        </div>
    }

    <div class="row justify-content-center mb-5">
        <div class="col-lg-8">
            <div class="row justify-content-center">
                <div class="col-md-5 mb-4">
                    <div class="card h-100 text-center">
                        <div class="card-body">
                            <h5 class="card-title">Студенты</h5>
                            <p class="card-text">Управление информацией о студентах и успеваемости</p>
                            <a href="@Url.Action("Index", "Students")" class="btn btn-primary">Перейти</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-5 mb-4">
                    <div class="card h-100 text-center">
                        <div class="card-body">
                            <h5 class="card-title">Преподаватели</h5>
                            <p class="card-text">Информация о преподавательском составе</p>
                            <a href="@Url.Action("Index", "Teachers")" class="btn btn-success">Перейти</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (latestNews != null && latestNews.Any())
    {
        <div class="row justify-content-center mb-5">
            <div class="col-lg-10">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Последние новости</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @foreach (var news in latestNews)
                            {
                                <div class="col-md-4 mb-3">
                                    <div class="card h-100">
                                        <div class="card-body">
                                            <h6 class="card-title">@news.Title</h6>
                                            <p class="card-text small">
                                                @if (news.Content.Length > 80)
                                                {
                                                    @news.Content.Substring(0, 80)
                                        
                                                    @:...
                                                }
                                                else
                                                {
                                                    @news.Content
                                                }
                                            </p>
                                        </div>
                                        <div class="card-footer bg-transparent">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <small class="text-muted">@news.PublishDate?.ToString("dd.MM.yyyy")</small>
                                                <a href="@Url.Action("NewsDetails", new { id = news.IdNews })" class="btn btn-sm btn-outline-primary">Читать</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="text-center mt-3">
                            <a href="@Url.Action("News")" class="btn btn-outline-primary">Все новости</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="row">
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header bg-dark text-white">
                            <h5 class="mb-0">Статистика вуза</h5>
                        </div>
                        <div class="card-body">
                            <div class="list-group list-group-flush">
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    Студенты
                                    <span class="badge bg-primary rounded-pill">@ViewBag.StudentsCount</span>
                                </div>
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    Преподаватели
                                    <span class="badge bg-success rounded-pill">@ViewBag.TeacherCount</span>
                                </div>
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    Учебные группы
                                    <span class="badge bg-warning rounded-pill">@ViewBag.GroupsCount</span>
                                </div>
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    Кафедры
                                    <span class="badge bg-info rounded-pill">@ViewBag.DepartamentsCount</span>
                                </div>
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    Дисциплины
                                    <span class="badge bg-secondary rounded-pill">@ViewBag.DisciplineCount</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header bg-secondary text-white">
                            <h5 class="mb-0">Быстрый доступ</h5>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                <a href="@Url.Action("Login", "Account")" class="btn btn-outline-primary">
                                    Вход в систему
                                </a>
                                <a href="@Url.Action("About")" class="btn btn-outline-info">
                                    О системе
                                </a>
                                <a href="@Url.Action("News")" class="btn btn-outline-success">
                                    Новости
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>