@{
    ViewData["Title"] = "Учебная система ВУЗа";
    Layout = "_Layout";
}

<div class="simple-page">
    <div class="text-center">
        <h1 class="mb-4">Учебная система университета</h1>

        <p class="subtitle mb-5">
            Платформа для студентов и преподавателей
        </p>

        <div class="features mb-5">
            Современная система для добавления материалов для студентов
        </div>

        <a asp-controller="Account" asp-action="Login" class="btn btn-lg px-5 mb-4">
            Войти в систему
        </a>

        <div class="support mt-5">
            <p class="text-muted">
                <i class="fas fa-envelope me-1"></i>support@university.edu
            </p>
        </div>
    </div>
</div>

<style>
    .simple-page {
        min-height: 80vh;
        padding: 60px 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: white;
    }

        .simple-page h1 {
            font-size: 2.5rem;
            font-weight: 700;
            color: #2c3e50;
        }

        .simple-page .subtitle {
            font-size: 1.3rem;
            color: #7b8a8b;
        }

        .simple-page .features p {
            font-size: 1.1rem;
            margin-bottom: 12px;
            color: #34495e;
        }

        .simple-page .btn {
            background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);
            color: white;
            border: none;
            border-radius: 8px;
            padding: 14px 50px;
            font-size: 1.1rem;
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .simple-page .btn:hover {
                transform: translateY(-3px);
                box-shadow: 0 6px 20px rgba(52, 152, 219, 0.3);
                color: white;
            }

        .simple-page .support {
            border-top: 1px solid #ecf0f1;
            padding-top: 20px;
            max-width: 300px;
            margin: 0 auto;
        }
</style>