@{
    ViewData["Title"] = "Регистрация нового пользователя";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h3 class="mb-0">Регистрация нового пользователя</h3>
                </div>
                <div class="card-body">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["ErrorMessage"]
                        </div>
                    }

                    <form method="post">
                        @Html.AntiForgeryToken()

                        <div class="row mb-4">
                            <div class="col-12">
                                <h5 class="text-primary">Личные данные</h5>
                                <hr>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label for="secondName" class="form-label">Фамилия *</label>
                                <input type="text" class="form-control" id="secondName" name="secondName" required
                                       placeholder="Иванов">
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="name" class="form-label">Имя *</label>
                                <input type="text" class="form-control" id="name" name="name" required
                                       placeholder="Иван">
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="patronymic" class="form-label">Отчество</label>
                                <input type="text" class="form-control" id="patronymic" name="patronymic"
                                       placeholder="Иванович">
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-12">
                                <h5 class="text-primary">Контактная информация</h5>
                                <hr>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="email" class="form-label">Email *</label>
                                <input type="email" class="form-control" id="email" name="email" required
                                       placeholder="ivanov@university.ru">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="phone" class="form-label">Телефон *</label>
                                <input type="tel" class="form-control" id="phone" name="phone" required
                                       placeholder="+7(999)123-45-67">
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-12">
                                <h5 class="text-primary">Учетные данные и роль</h5>
                                <hr>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label for="login" class="form-label">Логин *</label>
                                <input type="text" class="form-control" id="login" name="login" required
                                       placeholder="Уникальный логин">
                                <div class="form-text">Должен быть уникальным</div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="role" class="form-label">Роль *</label>
                                <select class="form-control" id="role" name="role" required>
                                    <option value="">Выберите роль</option>
                                    <option value="Student">Студент</option>
                                    <option value="Teacher">Преподаватель</option>
                                </select>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="password" class="form-label">Пароль *</label>
                                <input type="password" class="form-control" id="password" name="password" required
                                       placeholder="Минимум 6 символов">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="confirmPassword" class="form-label">Подтверждение пароля *</label>
                                <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required
                                       placeholder="Повторите пароль">
                            </div>
                        </div>

                        <!-- Поля для студентов -->
                        <div id="studentFields" style="display: none;">
                            <div class="row mb-4">
                                <div class="col-12">
                                    <h5 class="text-info">Информация для студента</h5>
                                    <hr>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="groupId" class="form-label">Группа</label>
                                    <select class="form-control" id="groupId" name="groupId">
                                        <option value="">Выберите группу</option>
                                        @foreach (var group in ViewBag.Groups)
                                        {
                                            <option value="@group.IdGroup">Группа @group.NumberGroup (@group.Departament?.Name)</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="dateBirthday" class="form-label">Дата рождения</label>
                                    <input type="date" class="form-control" id="dateBirthday" name="dateBirthday">
                                </div>
                            </div>
                        </div>

                        <!-- Поля для преподавателей -->
                        <div id="teacherFields" style="display: none;">
                            <div class="row mb-4">
                                <div class="col-12">
                                    <h5 class="text-warning">Информация для преподавателя</h5>
                                    <hr>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="departamentId" class="form-label">Кафедра</label>
                                    <select class="form-control" id="departamentId" name="departamentId">
                                        <option value="">Выберите кафедру</option>
                                        @foreach (var departament in ViewBag.Departaments)
                                        {
                                            <option value="@departament.IdDepartament">@departament.Name</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="disciplines" class="form-label">Дисциплины (опционально)</label>
                                    <select class="form-control" id="disciplineIds" name="disciplineIds" multiple>
                                        @foreach (var discipline in ViewBag.Disciplines)
                                        {
                                            <option value="@discipline.IdDiscipline">@discipline.Name</option>
                                        }
                                    </select>
                                    <div class="form-text">Удерживайте Ctrl для выбора нескольких дисциплин</div>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-success btn-lg">
                                Зарегистрировать пользователя
                            </button>
                            <a href="@Url.Action("AdminDashboard", "Home")" class="btn btn-outline-secondary">
                                Назад в панель администратора
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#role').change(function() {
                const role = $(this).val();
                $('#studentFields').hide();
                $('#teacherFields').hide();

                if (role === 'Student') {
                    $('#studentFields').show();
                } else if (role === 'Teacher') {
                    $('#teacherFields').show();
                }
            });

            $('form').on('submit', function(e) {
                let isValid = true;

                $('input[required], select[required]').each(function() {
                    if ($(this).val().trim() === '') {
                        $(this).addClass('is-invalid');
                        isValid = false;
                    } else {
                        $(this).removeClass('is-invalid');
                    }
                });

                if ($('#password').val().length < 6) {
                    $('#password').addClass('is-invalid');
                    isValid = false;
                }

                if ($('#password').val() !== $('#confirmPassword').val()) {
                    $('#confirmPassword').addClass('is-invalid');
                    isValid = false;
                }

                if (!isValid) {
                    e.preventDefault();
                    alert('Пожалуйста, заполните все обязательные поля и исправьте ошибки.');
                }
            });

            $('input, select').on('input change', function() {
                $(this).removeClass('is-invalid');
            });
        });
    </script>
}