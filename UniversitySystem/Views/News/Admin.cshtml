@model IEnumerable<UniversitySystem.Models.News>
@{
    ViewData["Title"] = "Управление новостями";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card bg-primary text-white mb-4">
                <div class="card-body">
                    <h1 class="card-title">
                         Управление новостями
                    </h1>
                    <p class="card-text">Создание и редактирование новостей вуза</p>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <a href="@Url.Action("AdminDashboard", "Home")" class="btn btn-secondary">
                   Назад в панель
                </a>
                <a href="@Url.Action("Create", "News")" class="btn btn-success">
                     Создать новость
                </a>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <h4> Новости отсутствуют</h4>
            <p>Создайте первую новость для вашего вуза</p>
            <a href="@Url.Action("Create", "News")" class="btn btn-primary">Создать новость</a>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bg-dark text-white">
                        <h5 class="mb-0"> Список новостей</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Заголовок</th>
                                        <th>Дата создания</th>
                                        <th>Дата публикации</th>
                                        <th>Статус</th>
                                        <th>Автор</th>
                                        <th>Действия</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var news in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@news.Title</strong>
                                                @if (!string.IsNullOrEmpty(news.ImageUrl))
                                                {
                                                    <br>
                                                    <small class="text-muted"> Есть изображение</small>
                                                }
                                            </td>
                                            <td>@news.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
                                            <td>@news.PublishDate?.ToString("dd.MM.yyyy HH:mm")</td>
                                            <td>
                                                @if (news.IsPublished)
                                                {
                                                    <span class="badge bg-success">Опубликована</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">Черновик</span>
                                                }
                                            </td>
                                            <td>@(news.Author ?? "Администрация")</td>
                                            <td>
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a href="@Url.Action("Edit", "News", new { id = news.IdNews })"
                                                       class="btn btn-outline-primary" title="Редактировать">
                                                        <i class="fas fa-edit"></i>
                                                    </a>

                                                    <form method="post" action="@Url.Action("TogglePublish", "News", new { id = news.IdNews })"
                                                          class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-outline-@(news.IsPublished ? "warning" : "success")"
                                                                title="@(news.IsPublished ? "Снять с публикации" : "Опубликовать")">
                                                            <i class="fas fa-@(news.IsPublished ? "eye-slash" : "eye")"></i>
                                                        </button>
                                                    </form>

                                                    <form method="post" action="@Url.Action("Delete", "News", new { id = news.IdNews })"
                                                          class="d-inline"
                                                          onsubmit="return confirm('Вы уверены, что хотите удалить эту новость?');">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-outline-danger" title="Удалить">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="row mt-4">
        <div class="col-12">
            <div class="card bg-light">
                <div class="card-body">
                    <h5><i class="fas fa-lightbulb"></i> Советы по управлению новостями:</h5>
                    <ul class="mb-0">
                        <li>Создавайте актуальные и интересные новости для студентов и преподавателей</li>
                        <li>Используйте изображения для привлечения внимания</li>
                        <li>Публикуйте новости вовремя и следите за их актуальностью</li>
                        <li>Регулярно обновляйте контент для поддержания интереса аудитории</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}