@model IEnumerable<UniversitySystem.Models.MaterialRequest>
@{
    ViewData["Title"] = "Управление запросами материалов";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card bg-secondary text-white mb-4">
                <div class="card-body">
                    <h1 class="card-title">
                       Управление запросами материалов
                    </h1>
                    <p class="card-text">Обработка запросов на учебные материалы от студентов и преподавателей</p>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <a href="@Url.Action("AdminDashboard", "Home")" class="btn btn-secondary">
                     Назад в панель
                </a>
                <div class="btn-group">
                    <button type="button" class="btn btn-outline-primary" id="filterPending">
                         Ожидающие (@Model.Count(r => r.Status == "Pending"))
                    </button>
                    <button type="button" class="btn btn-outline-success" id="filterApproved">
                       Одобренные (@Model.Count(r => r.Status == "Approved"))
                    </button>
                    <button type="button" class="btn btn-outline-danger" id="filterRejected">
                       Отклоненные (@Model.Count(r => r.Status == "Rejected"))
                    </button>
                    <button type="button" class="btn btn-outline-info" id="filterCompleted">
                         Выполненные (@Model.Count(r => r.Status == "Completed"))
                    </button>
                    <button type="button" class="btn btn-outline-dark" id="filterAll">
                         Все (@Model.Count())
                    </button>
                </div>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <h4> Запросы отсутствуют</h4>
            <p>В данный момент нет запросов на учебные материалы</p>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bg-dark text-white">
                        <h5 class="mb-0">Список запросов</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover" id="requestsTable">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Пользователь</th>
                                        <th>Материал</th>
                                        <th>Тип</th>
                                        <th>Дата создания</th>
                                        <th>Статус</th>
                                        <th>Действия</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var request in Model)
                                    {
                                        <tr class="request-row" data-status="@request.Status">
                                            <td>
                                                @if (request.User?.Student != null)
                                                {
                                                    <strong>@request.User.Student.SecondName @request.User.Student.Name</strong>
                                                    <br>
                                                    <small class="text-muted">Студент</small>
                                                }
                                                else if (request.User?.Teacher != null)
                                                {
                                                    <strong>@request.User.Teacher.SecondName @request.User.Teacher.Name</strong>
                                                    <br>
                                                    <small class="text-muted">Преподаватель</small>
                                                }
                                                else
                                                {
                                                    <strong>@request.User?.Login</strong>
                                                }
                                            </td>
                                            <td>
                                                <strong>@request.Title</strong>
                                                @if (!string.IsNullOrEmpty(request.Description) && request.Description.Length > 50)
                                                {
                                                    <br>
                                                    <small class="text-muted">@request.Description.Substring(0, 50)...</small>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@request.MaterialType</span>
                                            </td>
                                            <td>@request.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
                                            <td>
                                                @switch (request.Status)
                                                {
                                                    case "Pending":
                                                        <span class="badge bg-warning">На рассмотрении</span>
                                                        break;
                                                    case "Approved":
                                                        <span class="badge bg-success">Одобрен</span>
                                                        @if (request.ProcessedDate.HasValue)
                                                        {
                                                            <br>
                                                            <small class="text-muted">@request.ProcessedDate.Value.ToString("dd.MM.yyyy")</small>
                                                        }
                                                        break;
                                                    case "Rejected":
                                                        <span class="badge bg-danger">Отклонен</span>
                                                        @if (request.ProcessedDate.HasValue)
                                                        {
                                                            <br>
                                                            <small class="text-muted">@request.ProcessedDate.Value.ToString("dd.MM.yyyy")</small>
                                                        }
                                                        break;
                                                    case "Completed":
                                                        <span class="badge bg-primary">Выполнен</span>
                                                        @if (request.CompletedDate.HasValue)
                                                        {
                                                            <br>
                                                            <small class="text-muted">@request.CompletedDate.Value.ToString("dd.MM.yyyy")</small>
                                                        }
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <button type="button" class="btn btn-outline-info view-details"
                                                            data-bs-toggle="modal" data-bs-target="#detailsModal"
                                                            data-title="@request.Title"
                                                            data-description="@request.Description"
                                                            data-type="@request.MaterialType"
                                                            data-status="@request.Status"
                                                            data-created="@request.CreatedDate.ToString("dd.MM.yyyy HH:mm")"
                                                            data-comment="@request.AdminComment"
                                                            data-fileurl="@request.FileUrl"
                                                            data-user="@(request.User?.Student != null ? $"{request.User.Student.SecondName} {request.User.Student.Name} (Студент)" : request.User?.Teacher != null ? $"{request.User.Teacher.SecondName} {request.User.Teacher.Name} (Преподаватель)" : request.User?.Login)">
                                                        <i class="fas fa-eye"></i>
                                                    </button>

                                                    @if (request.Status == "Pending")
                                                    {
                                                        <button type="button" class="btn btn-outline-success update-status"
                                                                data-bs-toggle="modal" data-bs-target="#statusModal"
                                                                data-requestid="@request.IdRequest" data-status="Approved">
                                                            <i class="fas fa-check"></i>
                                                        </button>
                                                        <button type="button" class="btn btn-outline-danger update-status"
                                                                data-bs-toggle="modal" data-bs-target="#statusModal"
                                                                data-requestid="@request.IdRequest" data-status="Rejected">
                                                            <i class="fas fa-times"></i>
                                                        </button>
                                                    }
                                                    else if (request.Status == "Approved")
                                                    {
                                                        <button type="button" class="btn btn-outline-primary update-status"
                                                                data-bs-toggle="modal" data-bs-target="#statusModal"
                                                                data-requestid="@request.IdRequest" data-status="Completed">
                                                            <i class="fas fa-check-double"></i>
                                                        </button>
                                                    }

                                                    <form method="post" action="@Url.Action("Delete", "MaterialRequests", new { id = request.IdRequest })"
                                                          class="d-inline"
                                                          onsubmit="return confirm('Вы уверены, что хотите удалить этот запрос?');">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-outline-danger" title="Удалить">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="row mt-4">
        <div class="col-md-3">
            <div class="card bg-warning text-dark text-center">
                <div class="card-body">
                    <h3>@Model.Count(r => r.Status == "Pending")</h3>
                    <p class="mb-0">Ожидают обработки</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white text-center">
                <div class="card-body">
                    <h3>@Model.Count(r => r.Status == "Approved")</h3>
                    <p class="mb-0">Одобрены</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-primary text-white text-center">
                <div class="card-body">
                    <h3>@Model.Count(r => r.Status == "Completed")</h3>
                    <p class="mb-0">Выполнены</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white text-center">
                <div class="card-body">
                    <h3>@Model.Count(r => r.Status == "Rejected")</h3>
                    <p class="mb-0">Отклонены</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="detailsModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Детали запроса</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <table class="table table-borderless">
                    <tr>
                        <th width="30%">Пользователь:</th>
                        <td id="detail-user"></td>
                    </tr>
                    <tr>
                        <th>Название:</th>
                        <td id="detail-title"></td>
                    </tr>
                    <tr>
                        <th>Тип материала:</th>
                        <td><span class="badge bg-info" id="detail-type"></span></td>
                    </tr>
                    <tr>
                        <th>Описание:</th>
                        <td id="detail-description"></td>
                    </tr>
                    <tr>
                        <th>Дата создания:</th>
                        <td id="detail-created"></td>
                    </tr>
                    <tr>
                        <th>Статус:</th>
                        <td id="detail-status"></td>
                    </tr>
                    <tr>
                        <th>Комментарий администратора:</th>
                        <td id="detail-comment"></td>
                    </tr>
                    <tr id="detail-file-row" style="display: none;">
                        <th>Файл:</th>
                        <td id="detail-file"></td>
                    </tr>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="statusModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-warning text-dark">
                <h5 class="modal-title">Изменение статуса запроса</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" action="@Url.Action("UpdateStatus", "MaterialRequests")">
                @Html.AntiForgeryToken()
                <input type="hidden" id="status-requestid" name="id">
                <input type="hidden" id="status-status" name="status">

                <div class="modal-body">
                    <div class="mb-3">
                        <label for="status-comment" class="form-label">Комментарий администратора</label>
                        <textarea class="form-control" id="status-comment" name="adminComment" rows="4"
                                  placeholder="Введите комментарий (необязательно)"></textarea>
                    </div>
                    <div class="alert alert-info">
                        <strong>Новый статус:</strong> <span id="status-display"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                    <button type="submit" class="btn btn-warning">Сохранить</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#filterPending').click(function() { filterRequests('Pending'); });
            $('#filterApproved').click(function() { filterRequests('Approved'); });
            $('#filterRejected').click(function() { filterRequests('Rejected'); });
            $('#filterCompleted').click(function() { filterRequests('Completed'); });
            $('#filterAll').click(function() { filterRequests('all'); });

            function filterRequests(status) {
                if (status === 'all') {
                    $('.request-row').show();
                } else {
                    $('.request-row').hide();
                    $(`.request-row[data-status="${status}"]`).show();
                }
            }

            $('.view-details').click(function() {
                const title = $(this).data('title');
                const description = $(this).data('description');
                const type = $(this).data('type');
                const status = $(this).data('status');
                const created = $(this).data('created');
                const comment = $(this).data('comment');
                const fileurl = $(this).data('fileurl');
                const user = $(this).data('user');

                $('#detail-user').text(user);
                $('#detail-title').text(title);
                $('#detail-type').text(type);
                $('#detail-description').text(description);
                $('#detail-created').text(created);

                let statusBadge = '';
                switch(status) {
                    case 'Pending': statusBadge = '<span class="badge bg-warning">На рассмотрении</span>'; break;
                    case 'Approved': statusBadge = '<span class="badge bg-success">Одобрен</span>'; break;
                    case 'Rejected': statusBadge = '<span class="badge bg-danger">Отклонен</span>'; break;
                    case 'Completed': statusBadge = '<span class="badge bg-primary">Выполнен</span>'; break;
                }
                $('#detail-status').html(statusBadge);

                $('#detail-comment').text(comment || 'Нет комментария');

                if (fileurl) {
                    $('#detail-file').html(`<a href="${fileurl}" target="_blank" class="btn btn-sm btn-outline-primary">Открыть файл</a>`);
                    $('#detail-file-row').show();
                } else {
                    $('#detail-file-row').hide();
                }
            });

            $('.update-status').click(function() {
                const requestId = $(this).data('requestid');
                const status = $(this).data('status');

                $('#status-requestid').val(requestId);
                $('#status-status').val(status);

                let statusText = '';
                switch(status) {
                    case 'Approved': statusText = 'Одобрить'; break;
                    case 'Rejected': statusText = 'Отклонить'; break;
                    case 'Completed': statusText = 'Отметить как выполненный'; break;
                }
                $('#status-display').text(statusText);
            });

            setTimeout(function() {
                $('.alert').fadeOut('slow');
            }, 5000);
        });
    </script>

    <style>
        .request-row:hover {
            background-color: #f8f9fa;
        }

        .btn-group-sm .btn {
            padding: 0.25rem 0.5rem;
        }
    </style>
}