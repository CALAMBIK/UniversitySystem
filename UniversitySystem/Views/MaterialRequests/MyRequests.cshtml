@model IEnumerable<UniversitySystem.Models.MaterialRequest>
@{
    ViewData["Title"] = "Мои запросы материалов";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card bg-primary text-white mb-4">
                <div class="card-body">
                    <h1 class="card-title">
                         Мои запросы учебных материалов
                    </h1>
                    <p class="card-text">История ваших запросов на учебные материалы</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-12">
            <a href="@Url.Action("Create", "MaterialRequests")" class="btn btn-success">
                Создать новый запрос
            </a>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <h5> У вас пока нет запросов</h5>
            <p>Создайте свой первый запрос на учебные материалы!</p>
            <a href="@Url.Action("Create", "MaterialRequests")" class="btn btn-primary">Создать запрос</a>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bg-dark text-white">
                        <h5 class="mb-0"> История запросов</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Название</th>
                                        <th>Тип</th>
                                        <th>Дата создания</th>
                                        <th>Статус</th>
                                        <th>Действия</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var request in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@request.Title</strong>
                                                @if (!string.IsNullOrEmpty(request.Description) && request.Description.Length > 50)
                                                {
                                                    <br>
                                                    <small class="text-muted">@request.Description.Substring(0, 50)...</small>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@request.MaterialType</span>
                                            </td>
                                            <td>@request.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
                                            <td>
                                                @switch (request.Status)
                                                {
                                                    case "Pending":
                                                        <span class="badge bg-warning">На рассмотрении</span>
                                                        break;
                                                    case "Approved":
                                                        <span class="badge bg-success">Одобрен</span>
                                                        break;
                                                    case "Rejected":
                                                        <span class="badge bg-danger">Отклонен</span>
                                                        break;
                                                    case "Completed":
                                                        <span class="badge bg-primary">Выполнен</span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-secondary">@request.Status</span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                <a href="@Url.Action("Details", "MaterialRequests", new { id = request.IdRequest })"
                                                   class="btn btn-sm btn-outline-primary" title="Просмотреть детали">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>