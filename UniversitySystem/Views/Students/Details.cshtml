@model UniversitySystem.Models.Student

@{
    ViewData["Title"] = "Подробности о студенте";
}

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Подробная информация о студенте</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5>Основная информация</h5>
                            <dl class="row">
                                <dt class="col-sm-4">Фамилия:</dt>
                                <dd class="col-sm-8">@Model.SecondName</dd>

                                <dt class="col-sm-4">Имя:</dt>
                                <dd class="col-sm-8">@Model.Name</dd>

                                <dt class="col-sm-4">Отчество:</dt>
                                <dd class="col-sm-8">@Model.Patronymic</dd>

                                <dt class="col-sm-4">Дата рождения:</dt>
                                <dd class="col-sm-8">@(Model.DateBirthday?.ToString("dd.MM.yyyy") ?? "Не указана")</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <h5>Учебная информация</h5>
                            <dl class="row">
                                <dt class="col-sm-4">Группа:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-primary">
                                        @if (Model.Group?.NumberGroup != null)
                                        {
                                            @:Группа @Model.Group.NumberGroup
                                        }
                                        else
                                        {
                                            @:Не указана
                                        }
                                    </span>
                                </dd>

                                <dt class="col-sm-4">Кафедра:</dt>
                                <dd class="col-sm-8">@(Model.Group?.Departament?.Name ?? "Не указана")</dd>

                                <dt class="col-sm-4">Логин:</dt>
                                <dd class="col-sm-8"><code>@Model.Login</code></dd>
                            </dl>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-12">
                            <h5>Контактная информация</h5>
                            <dl class="row">
                                <dt class="col-sm-2">Телефон:</dt>
                                <dd class="col-sm-10">@Model.PhoneNumber</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Быстрые действия</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            Назад к списку
                        </a>
                        <a href="@Url.Action("Search")" class="btn btn-outline-primary">
                            Новый поиск
                        </a>
                    </div>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">Статистика</h5>
                </div>
                <div class="card-body">
                    <p><strong>ID студента:</strong> @Model.IdStudent</p>
                    <p><strong>ID группы:</strong> @(Model.IdGroup?.ToString() ?? "Не указан")</p>
                </div>
            </div>
        </div>
    </div>
</div>